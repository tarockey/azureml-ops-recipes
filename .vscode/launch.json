{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Remote Attach",
            "type": "python",
            "request": "attach",
            "connect": {
                "host": "${input:debuggingHostIp}",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/azureml-run-telemetry",
                    "remoteRoot": "."
                }
            ]
        }
    ],
    "inputs": [
        {
            "id": "debuggingHostIp",
            "description": "Enter a remote host IP address to connect to",
            "type": "promptString"
        }
    ]
}